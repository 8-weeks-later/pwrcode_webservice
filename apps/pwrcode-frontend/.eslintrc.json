{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-hooks",
    "airbnb-typescript",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "max-depth": ["error", 2],
    "max-params": ["error", 3],
    "max-lines-per-function": ["error", { "max": 10 }]
  }
}
